generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // Remove Session relation if you are doing Stateless JWT (see explanation below)
}

model Project {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  projectId   String   @unique // This is your custom ID like 'diaryof', 'nyaylok'
  name        String
  status      String   // 'building', 'live', 'archived'
  description String[]
  type        String[]
  detail      String?
  tags        String[]
  link        String?
  git         String?
  date        String?
  featured    Boolean  @default(false)
  minor       Boolean  @default(false)
  
  // Embedded Images
  img         ProjectImage[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

type ProjectImage {
  src      String
  text     String
  publicId String?
}